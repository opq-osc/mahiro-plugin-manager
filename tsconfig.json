{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ES6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ],
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
    ]
  }
}
